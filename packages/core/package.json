{
  "name": "dumbfound",
  "version": "0.4.0",
  "description": "Utility for randomized testing",
  "main": "dist/cjs/index.js",
  "types": "dist/types/index.d.ts",
  "license": "MIT",
  "repository": "https://github.com/aholstenson/dumbfound/tree/master/packages/core",
  "keywords": [
    "testing",
    "randomized testing"
  ],
  "scripts": {
    "test": "jest",
    "ci": "npm run coverage && npm run lint",
    "coverage": "jest --coverage",
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "build": "tsc --module commonjs --target es5 --outDir dist/cjs",
    "prebuild": "rimraf dist",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@types/jest": "^24.0.11"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.4",
    "jest": "^24.7.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.3"
  }
}
