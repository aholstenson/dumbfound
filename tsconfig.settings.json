{
	"compilerOptions": {
		"composite": true,

		"moduleResolution": "node",
		"target": "es5",
		"module":"commonjs",

		"lib": [ "es2015", "es2016", "es2017" ],
		"strict": true,

		"sourceMap": true,

		"declaration": true,

		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
	}
}
